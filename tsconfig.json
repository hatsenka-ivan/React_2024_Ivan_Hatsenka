{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noImplicitAny": true,                  // Ensure no expressions and declarations with an implied 'any' type
    "strictNullChecks": true,               // Ensure null/undefined checks are strict
    "strictFunctionTypes": true,            // Ensure function types are strictly checked
    "strictBindCallApply": true,            // Enable strict 'bind', 'call', and 'apply' methods on functions
    "strictPropertyInitialization": true,   // Ensure all properties of classes are initialized in the constructor
    "noImplicitThis": true,                 // Raise error on 'this' expressions with an implied 'any' type
    "alwaysStrict": true,                   // Parse in strict mode and emit "use strict" for each source file
    "noUnusedLocals": true,                 // Report errors on unused locals
    "noUnusedParameters": true,             // Report errors on unused parameters
    "noImplicitReturns": true,              // Report error when not all code paths in function return a value
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"]
}